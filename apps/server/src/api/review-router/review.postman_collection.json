	"item": [
		{
			"name": "Public",
			"item": [
				{
					"name": "Get Service Reviews",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/public/service/:serviceId?page=1&limit=10&sortBy=createdAt&order=desc",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"public",
								"service",
								":serviceId"
							],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number for pagination"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Number of items per page"
								},
								{
									"key": "sortBy",
									"value": "createdAt",
									"description": "Field to sort by (createdAt, rating)"
								},
								{
									"key": "order",
									"value": "desc",
									"description": "Sort order (asc, desc)"
								}
							],
							"variable": [
								{
									"key": "serviceId",
									"value": "",
									"description": "ID of the service to get reviews for"
								}
							]
						},
						"description": "Get paginated reviews for a specific service"
					}
				},
				{
					"name": "Get Review by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/public/:reviewId",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"public",
								":reviewId"
							],
							"variable": [
								{
									"key": "reviewId",
									"value": "",
									"description": "ID of the review to fetch"
								}
							]
						},
						"description": "Get a specific review by its ID"
					}
				}
			]
		},
		{
			"name": "Protected",
			"item": [
				{
					"name": "Create Review",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"serviceId\": \"service_id_here\",\n    \"rating\": 5,\n    \"comment\": \"Excellent service! Very professional and thorough.\",\n    \"bookingId\": \"optional_booking_id_here\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/protected",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"protected"
							]
						},
						"description": "Create a new review for a service"
					}
				},
				{
					"name": "Get User Reviews",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/protected/user/me",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"protected",
								"user",
								"me"
							]
						},
						"description": "Get all reviews created by the authenticated user"
					}
				},
				{
					"name": "Update Review",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"rating\": 4,\n    \"comment\": \"Updated review comment\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/protected/:reviewId",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"protected",
								":reviewId"
							],
							"variable": [
								{
									"key": "reviewId",
									"value": "",
									"description": "ID of the review to update"
								}
							]
						},
						"description": "Update an existing review (only if user is the author)"
					}
				},
				{
					"name": "Delete Review",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
