						],
						"url": {
							"raw": "{{base_url}}/api/v1/reviews/protected/:reviewId",
							"host": ["{{base_url}}"],
							"path": [
								"api",
								"v1",
								"reviews",
								"protected",
								":reviewId"
							],
							"variable": [
								{
									"key": "reviewId",
									"value": "",
									"description": "ID of the review to delete"
								}
							]
						},
						"description": "Delete a review (only if user is the author)"
					}
				}
			]
		}
